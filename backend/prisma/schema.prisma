generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String @unique
  password String
  role Role @default(USER)
}


model Filme{
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo         String
  sinopse        String
  dataLancamento DateTime
  duracao        Int
  sessao Sessao[]
}

model Sessao {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  dataHora DateTime
  sala Int
  filmeId String? @db.ObjectId
  filme Filme? @relation(fields: [filmeId] , references: [id])

}
enum Role {
  USER
  ADMIN
}